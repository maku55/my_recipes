<%=render 'shared/page_title', title: 'SIGN UP' %>
<div class="row">
	<div class="well col-md-6 col-md-offset-3">
		<%= form_tag '/signup' do %>
		<%= label_tag :'First Name' %>
		<%= text_field_tag :Name %> 
		<%=label_tag :'Last Name'%>
	    <%= text_field_tag :Name %>
	    <%= label_tag :email %>
		<%= text_field_tag :email %>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
		<%= label_tag :'Confirm password' %>
		<%= password_field_tag :password %>
		<%= label_tag :'date of birth'%>
		<%= text_field_tag :integer%>
		<%= submit_tag 'Sign Up', class:'btn btn-success btn-small'%>
	    <%end%>
	</div>
</div>