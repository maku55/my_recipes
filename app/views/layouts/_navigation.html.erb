<header class=" navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%=  link_to 'myRecipes',root_path, class:"btn btn-lg btn-success", id: "logo" %>
    <div class="nav-item">
      <%= link_to 'View Recipes','',class:"btn btn-lg btn-warning" %>
    </div>
    <div class="nav-item">
      <%= link_to 'Edit Recipes','',class:"btn btn-lg btn-warning"%>
    </div>
  
     <%if logged_in?%>
     <!-- changed the "nav-ul-item" to "nav-item" -->
     <div class="nav-item">
      <%= link_to 'New Recipe',new_recipe_path,class:"btn btn-lg btn-warning"%>
