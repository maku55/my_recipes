<%=render 'shared/page_title', title: 'All Chefs'%>
<ul class="nav nav-tabs">
	<li><%= link_to "Recipes", recipes_path%></li>
	<li class="active"><%=link_to "Chefs", chefs_path%></li>
</ul>
<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= will_paginate%>
	</div>
</div>

<%@chefs.each do |chef|%>
  <div class="row">
  	<div class="col-md-4 col-md-offset-4 center">
    <%= image_tag(chef.picture.url,size: "250x150",class: "gravatar") if chef.picture? %>
  		<%=link_to gravatar_for(chef, size:200), chef_path(chef)%>
  		<p>
  			<h3>Chef name: <%= chef.chefname%></h3>
  		</p>
  	</div>
  </div>
<%end%>
